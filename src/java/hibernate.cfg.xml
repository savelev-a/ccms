<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">${app.jdbc.driverClassName}</property>
    <property name="hibernate.connection.url">${app.jdbc.url}</property>
    <property name="hibernate.connection.username">${app.jdbc.username}</property>
    <property name="hibernate.connection.password">${app.jdbc.password}</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <property name="hibernate.show_sql">false</property>
  </session-factory>
</hibernate-configuration>
